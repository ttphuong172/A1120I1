<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/student_management?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">28101998</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
<!--        create: với mỗi lần chạy lại tomcat thì spring sẽ tạo lại toàn bộ bảng trong DB-->
<!--        update: kiểm tra các cái class entity trong java xem thử có khác gì với DB. Nếu khác thì sẽ update lại.-->
<!--        none: Không đụng tới DB-->
        <mapping class="com.codegym.model.entity.Student"/>
    </session-factory>
</hibernate-configuration>